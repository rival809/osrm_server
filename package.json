{
  "name": "osrm-tile-service",
  "version": "1.0.0",
  "description": "OSRM routing and tile service for West Java",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "download-pbf": "node scripts/download-pbf.js",
    "cache-manager": "powershell -ExecutionPolicy Bypass -File CACHE-MANAGER.ps1",
    "docker-manager": "powershell -ExecutionPolicy Bypass -File DOCKER-MANAGER.ps1",
    "preload": "node -e \"const axios = require('axios'); axios.post('http://localhost:3000/cache/preload', {zoomLevels: [10,11,12]}).then(r => console.log(r.data)).catch(e => console.error(e.message))\""",
    "cache-stats": "node -e \"const axios = require('axios'); axios.get('http://localhost:3000/cache/stats').then(r => console.log(JSON.stringify(r.data, null, 2))).catch(e => console.error(e.message))\""",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f tile-cache",
    "docker:status": "docker-compose ps"
  },
  "keywords": [
    "osrm",
    "tiles",
    "routing",
    "openstreetmap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mapbox/sphericalmercator": "^2.0.2",
    "axios": "^1.6.2",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
